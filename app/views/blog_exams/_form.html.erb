<%= form_with(model: @blog_exam, local: true, url: choose_new_or_edit ) do |form| %>
<% if @blog_exam.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog_exam.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @blog_exam.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="blog_exam_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="blog_exam_content"> 
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>

<%= link_to "ブログ一覧画面に戻る", blog_exams_path %>